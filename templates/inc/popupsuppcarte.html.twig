                            <input type="text" name="beneficiaire" class="form-control" placeholder="ID Carte" value="{{list.Beneficiaire.Beneficiaire}}" readonly>
                        </div>
                        <div class="col-lg-6">
                            Date Validit√© : <input type="text" name="datevaliditem" class="form-control" placeholder="ID Carte" value="{{list.DateValidite | date('Y-m-d')}}" readonly>
