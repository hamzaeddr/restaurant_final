{% set global = 0 %}
{% for item in detailR %}
    <h6 data-id="{{item.IdRepartition}}">
        {{item.Repartition}}
    </h6>
<table class="slh" style="width: 100%;font-size: 16px" cellspacing="-0.7">
        {% set count = 1 %}
        {% set total = 0 %}
        
    {% for itemP in detailP %}
    
    {% if itemP.Repartition.id == item.id %}
        
        <tr style="">
            <th style="width: 10%;padding: 5px;text-align: left;font-size:16px">{{count}}</th>
            <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{ itemP.Produit.IdProduit }}</th>
            <th style="width: 50%;padding: 5px;text-align: center;font-size:16px">{{itemP.Produit.Produit}}</th>
            <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{ itemP.Unite }}</th>
            <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{ itemP.StockCmd }}</th>
            {% for iteme in itemP.Produit.ProduitTarifs %} 
                {% if iteme.Tarif.id == "1"  %}
                    <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{iteme.TarifTtc}}</th>
               
            {# <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{itemP.Produit.ProduitTarifs.TarifTtc}}</th> #}
            <th style="width: 20%;padding: 5px;text-align: center;font-size:16px">{{ itemP.StockCmd * iteme.TarifTtc}}</th>
             {% endif %}
            {% endfor %}
        </tr>
         {% for iteme in itemP.Produit.ProduitTarifs %} 
                {% if iteme.Tarif.id == "1"  %}
                    {% set total = total + itemP.StockCmd * iteme.TarifTTC %}
                {% endif %}
         {% endfor %}
        {% set count = count + 1  %}
        
    {% endif %}
    
    {% endfor %}
    {% set global = global + total %}
        <tr>
            <th></th><th></th><th></th><th></th><th></th><th></th><th style="font-size:16px;background:grey">{{total}}</th>
        </tr>
</table>

{% endfor %}
<table class="slh" style="width: 100%;font-size: 16px;margin-top:20px;" cellspacing="-0.7">
        <tr style="">
            <th style="width: 10%;padding: 5px;text-align: left;font-size:16px"></th>
